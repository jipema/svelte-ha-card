{
  "name": "svelte-ha-card",
  "description": "svelte tools for creating Home Assistant Frontend (Lovelace) cards",
  "keywords": [
    "svelte",
    "home assistant",
    "card",
    "lovelace",
    "custom element",
    "hass",
    "ha",
    "component"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jipema/svelte-ha-card.git"
  },
  "homepage": "https://github.com/jipema/svelte-ha-card",
  "private": false,
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "dev": "IS_DEV=true vite build --watch & vite preview --host --port 5173",
    "build": "npm run build:js && npm run build:ts",
    "build:js": "vite build",
    "build:ts": "tsc --p ./tsconfig.d.json",
    "publish:beta": "npm run build && npm publish --tag beta",
    "publish:release": "npm run build && npm publish"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@tsconfig/svelte": "^5.0.4",
    "custom-card-helpers": "^1.9.0",
    "sass-embedded": "^1.77.8",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.5",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "vite": "^5.4.0"
  },
  "files": [
    "dist"
  ],
  "module": "./dist/svelte-ha-card.js",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/svelte-ha-card.js",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "types": "./dist/index.d.ts"
}